#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

/ {
    behaviors {
        hmLeft: hmLeft {
            compatible = "zmk,behavior-hold-tap";
            label = "HMLEFT";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <200>;
            quick-tap-ms = <125>;
            flavor = "tap-preferred";
            hold-trigger-key-positions = <6 7 8 9 10 11 18 19 20 21 22 23 30 31 32 33 34 35 43 44 45 46 47 48 49 54 55 56 57>;
        };

        hmRight: hmRight {
            compatible = "zmk,behavior-hold-tap";
            label = "HMRIGHT";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <200>;
            quick-tap-ms = <125>;
            flavor = "tap-preferred";
            hold-trigger-key-positions = <0 1 2 4 5 12 13 14 15 16 17 24 25 26 27 28 29 36 37 38 39 40 41 42 50 51 52 53>;
        };

        layerTab: layerTab {
            compatible = "zmk,behavior-hold-tap";
            label = "LAYERTAB";
            bindings = <&mo>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <200>;
            quick-tap-ms = <175>;
            flavor = "balanced";
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // ------------------------------------------------------------------------------------------------------------
            // |  ESC  |  1  |  2  |  3   |  4   |  5   |                   |  6   |  7    |  8    |  9   |   0   |   `   |
            // |  TAB  |  Q  |  W  |  E   |  R   |  T   |                   |  Y   |  U    |  I    |  O   |   P   |   -   |
            // |  CTRL |  A  |  S  |  D   |  F   |  G   |                   |  H   |  J    |  K    |  L   |   ;   |   '   |
            // | SHIFT |  Z  |  X  |  C   |  V   |  B   |   "["  |  |  "]"  |  N   |  M    |  ,    |  .   |   /   | SHIFT |
            //                     | ALT  | GUI  | LOWER|  SPACE |  | ENTER | RAISE| BSPC  | GUI   |

            display-name = "Base";
            bindings = <
&kp ESC    &kp N1              &kp N2           &kp N3                  &kp N4    &kp N5                  &kp N6           &kp N7     &kp N8                    &kp N9            &kp N0                   &kp BACKSPACE
&kp TAB    &kp Q               &kp W            &kp E                   &kp R     &kp T                   &kp Y            &kp U      &kp I                     &kp O             &kp P                    &kp BACKSLASH
&kp CAPS   &hmLeft LEFT_ALT A  &hmLeft LCTRL S  &hmLeft LEFT_COMMAND D  &kp F     &kp G                   &kp H            &kp J      &hmRight RIGHT_COMMAND K  &hmRight RCTRL L  &hmRight RIGHT_ALT SEMI  &kp SQT
&kp LSHFT  &kp Z               &kp X            &kp C                   &kp V     &kp B   &none    &none  &kp N            &kp M      &kp COMMA                 &kp DOT           &kp FSLH                 &kp RSHFT
                                                &layerTab 2 SPACE       &kp LGUI  &mo 1   &none    &none  &layerTab 1 TAB  &kp SPACE  &kp ENTER
            >;
        };

        lower_layer {
            // ------------------------------------------------------------------------------------------------------------
            // | BTCLR | BT1 | BT2 |  BT3 |  BT4 |  BT5 |                   |      |       |       |      |       |       |
            // |  F1   |  F2 |  F3 |  F4  |  F5  |  F6  |                   |  F7  |  F8   |  F9   |  F10 |  F11  |  F12  |
            // |   `   |  !  |  @  |  #   |  $   |  %   |                   |  ^   |  &    |  *    |  (   |   )   |   ~   |
            // |       |     |     |      |      |      |        |  |       |      |  _    |  +    |  {   |   }   |  "|"  |
            //                     |      |      |      |        |  |       |      |       |       |

            display-name = "Lower";
            bindings = <
&kp GRAVE  &kp EXCLAMATION    &kp AT_SIGN   &kp HASH      &kp DOLLAR    &kp PERCENT                    &kp CARET       &kp AMPERSAND   &kp ASTERISK  &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp BACKSPACE
&kp SPACE  &kp TILDE          &kp NUMBER_9  &kp NUMBER_8  &kp NUMBER_7  &kp MINUS                      &kp UNDER       &kp EQUAL       &kp MINUS     &kp LEFT_BRACKET      &kp RIGHT_BRACKET      &none
&kp ENTER  &kp C_VOLUME_UP    &kp NUMBER_6  &kp NUMBER_5  &kp NUMBER_4  &kp PLUS                       &kp LEFT_ARROW  &kp DOWN_ARROW  &kp UP_ARROW  &kp RIGHT_ARROW       &none                  &none
&trans     &kp C_VOLUME_DOWN  &kp NUMBER_3  &kp NUMBER_2  &kp NUMBER_1  &kp N0       &trans    &trans  &kp DELETE      &none           &none         &kp LEFT_BRACE        &kp RBRC               &trans
                                            &trans        &trans        &trans       &trans    &trans  &kp ENTER       &trans          &trans
            >;
        };

        raise_layer {
            // ------------------------------------------------------------------------------------------------------------
            // |       |     |     |      |      |      |                   |      |       |       |      |       |       |
            // |   `   |  1  |  2  |  3   |  4   |  5   |                   |  6   |   7   |   8   |  9   |   0   |       |
            // |   F1  |  F2 |  F3 |  F4  |  F5  |  F6  |                   |      |   <-  |   v   |  ^   |  ->   |       |
            // |   F7  |  F8 |  F9 |  F10 |  F11 |  F12 |        |  |       |  +   |   -   |   =   |  [   |   ]   |   \   |
            //                     |      |      |      |        |  |       |      |       |       |

            display-name = "Raise";
            bindings = <
&bt BT_CLR  &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4                    &none   &none   &none   &none  &none  &bt BT_CLR_ALL
&none       &none         &kp F1        &kp F2        &kp F3        &kp F4                          &none   &none   &none   &none  &none  &none
&none       &none         &kp F5        &kp F6        &kp F7        &kp F8                          &none   &none   &none   &none  &none  &none
&none       &none         &kp F9        &kp F10       &kp F11       &kp F12       &trans    &trans  &none   &none   &none   &none  &none  &none
                                        &trans        &trans        &trans        &trans    &trans  &trans  &trans  &trans
            >;
        };

        extra_1 { status = "reserved"; };

        extra_2 { status = "reserved"; };

        extra_3 { status = "reserved"; };
    };
};
